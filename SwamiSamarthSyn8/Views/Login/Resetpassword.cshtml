@model SwamiSamarthSyn8.Models.ResetpasswordModel
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background-color: #f2f2f2;
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .reset-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .reset-card {
        background: #fff;
        max-width: 400px;
        width: 100%;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        text-align: center;
    }



        .reset-card h3 {
            font-weight: 700;
            margin-bottom: 8px;
        }

        .reset-card p {
            color: #6c757d;
            font-size: 14px;
            margin-bottom: 20px;
        }

    .form-control {
        width: 100%;
        height: 45px;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 14px;
    }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
        }

    .btn-submit {
        width: 100%;
        background-color: #007bff;
        border: none;
        padding: 12px;
        color: #fff;
        font-size: 16px;
        font-weight: 600;
        border-radius: 6px;
        cursor: pointer;
        transition: 0.3s;
    }

        .btn-submit:hover {
            background-color: #0056b3;
        }
</style>

<div class="reset-wrapper">
    <div class="reset-card">
        <!-- Icon -->
        <img src="\Images\Shripad LOGO.png" alt="Logo" class="mb-4 login-logo" style="height: 85px" />
        <!-- Title -->
        <h3>Reset Password</h3>
        <p>Reset your password if you forgot them.</p>

        <!-- Form -->
        @using (Html.BeginForm("Resetpassword", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(model => model.Emp_Code)

            @Html.TextBoxFor(model => model.Userid, new { @class = "form-control", placeholder = "Email" })
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.PasswordFor(model => model.confirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })

            <button type="submit" onclick="return validatePassword()" class="btn-submit">Submit</button>
        }
    </div>
</div>

<script type="text/javascript">
    function validatePassword() {
        var password = $('#Password').val();
        var confirmPassword = $('#confirmPassword').val();

        if (password === confirmPassword) {
            return true;
        } else {
            alert("Passwords do not match!");
            return false;
        }
    }
</script>
