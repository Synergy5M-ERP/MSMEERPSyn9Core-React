@{
    ViewBag.Title = "HR";
    var existingUser = ViewBag.ExistingUser; // Logged-in user from controller
}

<head>
    <style>
        .form-container {
            max-width: 900px;
            margin: 30px auto;
            padding: 25px;
            background-color: #f8f9fa;
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }


        .form-control {
            height: 40px;
            font-size: 16px;
            border-radius: 5px;
        }

        .btn-primary, .btn-danger {
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border-radius: 5px;
            color: white;
            border: none;
            cursor: pointer;
        }

        .btn-primary {
            background-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0069d9;
            }

        .btn-danger {
            background-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
            }

        .alert {
            text-align: center;
        }

        hr {
            border-top: 2px solid #dee2e6;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2 style="text-align: center; color: navy; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);">AUTHORITY DELEGATION FORM</h2>

        <!-- Success / Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <!-- SINGLE CONTAINER FOR BOTH FORMS -->
        <div class="form-container">

            <!-- TRANSFER AUTHORITY FORM -->
            <form method="post" action="@Url.Action("ChangeAuthority")">

                <!-- Existing User Display -->
                <div class="form-group">
                    <label>EXISTING USER:</label>

                    <label class="form-label ml-auto">
                        @existingUser.username - @existingUser.Emp_Code - @existingUser.UserRole
                    </label>
                    <input type="hidden" name="existingUserId" value="@existingUser.id" />
                </div>

                <div class="row">
                    <!-- Existing User Authorities -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>EXISTING USER AUTHORITIES:</label>
                            <div class="row">
                                @if (existingUser.MaterialManagement)
                                {
                                    <div class="col-md-6 form-check">
                                        <input type="checkbox" class="form-check-input" checked disabled />
                                        <label class="form-check-label">Material Management</label>
                                    </div>
                                }
                                @if (existingUser.SalesAndMarketing)
                                {
                                    <div class="col-md-6 form-check">
                                        <input type="checkbox" class="form-check-input" checked disabled />
                                        <label class="form-check-label">Sales & Marketing</label>
                                    </div>
                                }
                                @if (existingUser.HRAndAdmin)
                                {
                                    <div class="col-md-6 form-check">
                                        <input type="checkbox" class="form-check-input" checked disabled />
                                        <label class="form-check-label">HR & Admin</label>
                                    </div>
                                }
                                @if (existingUser.AccountAndFinance)
                                {
                                    <div class="col-md-6 form-check">
                                        <input type="checkbox" class="form-check-input" checked disabled />
                                        <label class="form-check-label">Accounts & Finance</label>
                                    </div>
                                }
                                @if (existingUser.Masters)
                                {
                                    <div class="col-md-6 form-check">
                                        <input type="checkbox" class="form-check-input" checked disabled />
                                        <label class="form-check-label">Masters</label>
                                    </div>
                                }
                                @if (existingUser.Dashboard)
                                {
                                    <div class="col-md-6 form-check">
                                        <input type="checkbox" class="form-check-input" checked disabled />
                                        <label class="form-check-label">Dashboard</label>
                                    </div>
                                }
                                @if (existingUser.ProductionAndQuality)
                                {
                                    <div class="col-md-6 form-check">
                                        <input type="checkbox" class="form-check-input" checked disabled />
                                        <label class="form-check-label">Production & Quality</label>
                                    </div>
                                }
                                @if (existingUser.External_buyer_seller)
                                {
                                    <div class="col-md-6 form-check">
                                        <input type="checkbox" class="form-check-input" checked disabled />
                                        <label class="form-check-label">Quality</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- New User Authority Selection -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>SELECT AUTHORITIES TO TRANSFER:</label>
                            <div class="row">
                                @if (existingUser.MaterialManagement)
                                {
                                    <div class="col-md-6 form-check">
                                        <input type="checkbox" class="form-check-input" name="MaterialManagement" value="true" />
                                        <label class="form-check-label">Material Management</label>
                                    </div>
                                }
                                @if (existingUser.SalesAndMarketing)
                                {
                                    <div class="col-md-6 form-check">
                                        <input type="checkbox" class="form-check-input" name="SalesAndMarketing" value="true" />
                                        <label class="form-check-label">Sales & Marketing</label>
                                    </div>
                                }
                                @if (existingUser.HRAndAdmin)
                                {
                                    <div class="col-md-6 form-check">
                                        <input type="checkbox" class="form-check-input" name="HRAndAdmin" value="true" />
                                        <label class="form-check-label">HR & Admin</label>
                                    </div>
                                }
                                @if (existingUser.AccountAndFinance)
                                {
                                    <div class="col-md-6 form-check">
                                        <input type="checkbox" class="form-check-input" name="AccountAndFinance" value="true" />
                                        <label class="form-check-label">Accounts & Finance</label>
                                    </div>
                                }
                                @if (existingUser.Masters)
                                {
                                    <div class="col-md-6 form-check">
                                        <input type="checkbox" class="form-check-input" name="Masters" value="true" />
                                        <label class="form-check-label">Masters</label>
                                    </div>
                                }
                                @if (existingUser.Dashboard)
                                {
                                    <div class="col-md-6 form-check">
                                        <input type="checkbox" class="form-check-input" name="Dashboard" value="true" />
                                        <label class="form-check-label">Dashboard</label>
                                    </div>
                                }
                                @if (existingUser.ProductionAndQuality)
                                {
                                    <div class="col-md-6 form-check">
                                        <input type="checkbox" class="form-check-input" name="ProductionAndQuality" value="true" />
                                        <label class="form-check-label">Production & Quality</label>
                                    </div>
                                }
                                @if (existingUser.External_buyer_seller)
                                {
                                    <div class="col-md-6 form-check">
                                        <input type="checkbox" class="form-check-input" name="Quality" value="true" />
                                        <label class="form-check-label">Quality</label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">

                        <label>SELECT NEW USERNAME:</label>
                        <select id="newUsernameDropdown" name="newUserId" class="form-control">
                            <option value="">-- SELECT NEW USER --</option>
                            @foreach (SelectListItem user in ViewBag.UserList)
                            {
                                <option value="@user.Value">@user.Text</option>
                            }
                        </select>

                        <button type="submit" class="btn btn-primary mt-3 px-4">TRANSFER AUTHORITY</button>
                    </div>
                    <div class="col-md-6">
                        <!-- ROLLBACK FORM -->
                        <form method="post" action="@Url.Action("RollbackAuthority")">
                            <input type="hidden" name="existingUserId" value="@existingUser.id" />
                            <div class="form-group">
                                <label>ROLLBACK SELECTED USER:</label>
                                <select id="rollbackUserDropdown" name="newUserId" class="form-control">
                                    <option value="">-- SELECT USER TO ROLLBACK --</option>
                                    @foreach (SelectListItem user in ViewBag.RollbackUserList)
                                    {
                                        <option value="@user.Value">@user.Text</option>
                                    }
                                </select>

                                <button type="submit" class="btn btn-danger mt-3 px-4">ROLLBACK AUTHORITY</button>
                        </form>
                    </div>

                </div>

            </form>



        </div> <!-- end of single form-container -->
    </div>
</body>
