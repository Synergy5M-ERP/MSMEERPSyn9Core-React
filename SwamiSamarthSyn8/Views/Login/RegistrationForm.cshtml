<h2 style="text-align: center; color: navy; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);">CHIEF ADMIN REGISTRATION FORM</h2>
<div class="container" style="width: 80%; border: 2px solid navy;">
    @using (Html.BeginForm("RegistrationForm", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div id="myfrm" style="background-color:#f5f5f5; padding: 20px;">
            <div class="row">
                <div class="form-group col-md-3">
                    <label>COMPANY NAME<span style="color:red;">*</span></label>
                    @Html.TextBoxFor(a => a.company_name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.company_name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-3">
                    <label>CONTACT PERSON<span style="color:red;">*</span></label>
                    @Html.TextBoxFor(a => a.contact_person, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.contact_person, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-3">
                    <label> EMAIL ID<span style="color:red;">*</span></label>
                    @Html.TextBoxFor(a => a.email_id, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.email_id, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-3">
                    <label>CONTACT NO<span style="color:red;">*</span></label>
                    @Html.TextBoxFor(a => a.contact_no, new
                        {
                            @class = "form-control",
                            type = "text",
                            maxlength = 10,
                            oninput = "this.value = this.value.replace(/[^0-9]/g, '').slice(0, 10);"
                        })
                    @Html.ValidationMessageFor(a => a.contact_no, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-3">
                    <label>GST NO<span style="color:red;">*</span></label>
                    @Html.TextBoxFor(a => a.gst_no, new { @class = "form-control" })
                    @Html.ValidationMessageFor(a => a.gst_no, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-3">
                    <label>SOURCE<span style="color:red;">*</span></label>
                    <select name="source1" id="source1" class="form-control" onchange="SelectedTextValue8(this)">
                        <option selected="selected" hidden></option>
                    </select>
                    @Html.ValidationMessageFor(a => a.source, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-md-3">
                    <label>CONTINENT<span style="color:red;">*</span></label>
                    <select name="continent1" id="continent1" class="form-control" onchange="SelectedTextValue9(this)">
                        <option selected="selected" hidden></option>
                    </select>
                    @Html.ValidationMessageFor(a => a.continent, "", new { @class = "text-danger" })
                    <input type="text" id="continent" name="continent" hidden />
                </div>

                <div class="form-group col-md-3">
                    <label>COUNTRY<span style="color:red;">*</span></label>
                    <select name="country1" id="country1" class="form-control" onchange="SelectedTextValue13(this)">
                        <option selected="selected" hidden></option>
                    </select>
                    @Html.ValidationMessageFor(a => a.country, "", new { @class = "text-danger" })
                    <input type="text" id="country" name="country" hidden />
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-3">
                    <label>STATE / PROVINCE<span style="color:red;">*</span></label>
                    <select name="state1" id="state1" class="form-control" onchange="SelectedTextValue14(this)">
                        <option selected="selected" hidden></option>
                    </select>
                    @Html.ValidationMessageFor(a => a.state, "", new { @class = "text-danger" })
                    <input type="text" id="state" name="state" hidden />
                </div>

                <div class="form-group col-md-3">
                    <label>CITY<span style="color:red;">*</span></label>
                    <select name="city1" id="city1" class="form-control" onchange="SelectedTextValue15(this)">
                        <option selected="selected" hidden></option>
                    </select>
                    @Html.ValidationMessageFor(a => a.city, "", new { @class = "text-danger" })
                    <input type="text" id="city" name="city" hidden />
                </div>

                <div class="form-group col-md-3">
                    <label>AUTHORITY<span style="color:red;">*</span></label>
                    @Html.DropDownListFor(a => a.authority,
                             (SelectList)ViewBag.AuthorityList,
                             "Select Authority",
                             new { @class = "form-control" })
                </div>

                <div class="form-group col-md-3">
                    <label>DESIGNATION<span style="color:red;">*</span></label>
                    @Html.DropDownListFor(a => a.designation,
                             (SelectList)ViewBag.DesignationList,
                             "Select Designation",
                             new { @class = "form-control" })
                </div>
            </div>

            <div class="row">
                <div class="form-group col-md-3">
                    <label>PASSWORD<span style="color:red;">*</span></label>
                    @Html.PasswordFor(a => a.Password, new { @class = "form-control" })
                </div>

                <div class="form-group col-md-3">
                    <label>CONFIRM PASSWORD<span style="color:red;">*</span></label>
                    @Html.PasswordFor(a => a.confirm_password, new { @class = "form-control" })
                </div>

                <div class="col-md-6">
                    <label id="lblpassword" style="color:red;"></label>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-center">
                    <label id="lblerr" style="color: red;">@TempData["userpresent"]</label>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 text-center">
                    <input type="submit" class="btn btn-success" value="Submit" onclick="return btnSubmit()" />
                </div>
            </div>
        </div>
    }
</div>

