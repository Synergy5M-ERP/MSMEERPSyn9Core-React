<script>
    $(document).ready(function () {
        // Populate Source dropdown on page load
        $.ajax({
            url: '@Url.Action("GetSource", "Login")',
            type: 'GET',
            success: function (data) {
                console.log("Source Data:", data); // Debugging
                populateDropdown('#source1', data);
            }
        });

        // Handle Source dropdown change event
        $('#source1').change(function () {
            var selectedSource = $(this).val();
            if (selectedSource) {
                $.ajax({
                    url: '@Url.Action("GetContinent", "Login")',
                    type: 'GET',
                    data: { source: selectedSource },
                    success: function (data) {
                        console.log("Continent Data:", data); // Debugging
                        populateDropdown('#continent1', data);
                        $('#country1, #state1, #city1').empty().prop('disabled', true);
                    }
                });
            } else {
                $('#continent1, #country1, #state1, #city1').empty().prop('disabled', true);
            }
        });

        // Handle Continent dropdown change event
        $('#continent1').change(function () {
            var selectedSource = $('#source1').val();
            var selectedContinent = $(this).val();
            if (selectedContinent) {
                $.ajax({
                    url: '@Url.Action("GetCountry", "Login")',
                    type: 'GET',
                    data: { source: selectedSource, continent: selectedContinent },
                    success: function (data) {
                        console.log("Country Data:", data); // Debugging
                        populateDropdown('#country1', data);
                        $('#state1, #city1').empty().prop('disabled', true);
                    }
                });
            } else {
                $('#country1, #state1, #city1').empty().prop('disabled', true);
            }
        });

        // Handle Country dropdown change event
        $('#country1').change(function () {
            var selectedSource = $('#source1').val();
            var selectedContinent = $('#continent1').val();
            var selectedCountry = $(this).val();
            if (selectedCountry) {
                $.ajax({
                    url: '@Url.Action("GetState", "Login")',
                    type: 'GET',
                    data: { source: selectedSource, continent: selectedContinent, country: selectedCountry },
                    success: function (data) {
                        console.log("State Data:", data); // Debugging
                        populateDropdown('#state1', data);
                        $('#city1').empty().prop('disabled', true);
                    }
                });
            } else {
                $('#state1, #city1').empty().prop('disabled', true);
            }
        });

        // Handle State dropdown change event
        $('#state1').change(function () {
            var selectedSource = $('#source1').val();
            var selectedContinent = $('#continent1').val();
            var selectedCountry = $('#country1').val();
            var selectedState = $(this).val();
            if (selectedState) {
                $.ajax({
                    url: '@Url.Action("GetCity", "Login")',
                    type: 'GET',
                    data: { source: selectedSource, continent: selectedContinent, country: selectedCountry, state: selectedState },
                    success: function (data) {
                        console.log("City Data:", data); // Debugging
                        populateDropdown('#city1', data);
                    }
                });
            } else {
                $('#city1').empty().prop('disabled', true);
            }
        });

        // Function to populate a dropdown with data
        function populateDropdown(dropdownId, data) {
            var dropdown = $(dropdownId);
            dropdown.empty();
            dropdown.append($('<option>').text('Select an option').val(''));
            $.each(data, function (index, item) {
                dropdown.append($('<option>').text(item).val(item));
            });
            dropdown.prop('disabled', false);
        }
    });
</script>

