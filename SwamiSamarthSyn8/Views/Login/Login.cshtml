@model SwamiSamarthSyn8.Models.userlogin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-wrapper d-flex align-items-center justify-content-center">
    <div class="login-card p-5 shadow-lg rounded-3 text-center">

        @* Display the server-side error message here. *@
        @if (!string.IsNullOrEmpty(ViewBag.Message))
        {
            <div class="alert alert-danger text-center mb-3" role="alert">
                @ViewBag.Message
            </div>
        }

        <img src="\Images\Shripad LOGO.png" alt="Logo" class="mb-4 login-logo" style="height: 85px" />

        @* Correctly defined form with BeginForm helper *@
        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { id = "loginForm" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group mb-4 text-start">
                <label class="form-label">Username</label>
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-0"><i class="fa fa-user"></i></span>
                    @Html.TextBoxFor(x => x.username, new { @class = "form-control border-0 shadow-none", placeholder = "Type your username", @id = "username" })
                </div>
            </div>

            <div class="form-group mb-3 text-start">
                <label class="form-label">Password</label>
                <div class="input-group">
                    <span class="input-group-text bg-transparent border-0"><i class="fa fa-lock"></i></span>
                    @Html.PasswordFor(x => x.password, new { @class = "form-control border-0 shadow-none", @id = "password", placeholder = "Type your password" })
                    <button type="button" class="btn btn-sm btn-light" id="togglePassword"><i class="fa fa-eye"></i></button>
                </div>
                @* Removed the password strength small tag as it's no longer used for validation UI *@
            </div>

            <div class="d-flex justify-content-end mb-3">
                @Html.ActionLink("Forgot password?", "ForgetPassword", null, new { @class = "small text-muted text-decoration-none" })
            </div>

            <div class="d-grid mb-3">
                <button type="submit" id="btnlogin" class="btn login-btn">LOGIN</button>
            </div>
        }

        <div class="alert alert-danger d-none" id="errormessage"></div>
    </div>
</div>

<style>
    /* ... your CSS code ... */
    .login-card {
        background: #fff;
        max-width: 400px;
        width: 100%;
        border-radius: 20px;
    }

    .form-control:focus {
        box-shadow: none;
        border-color: #6a11cb;
    }

    .login-btn {
        background: linear-gradient(90deg, #6a11cb, #2575fc);
        color: #fff;
        border: none;
        font-weight: bold;
        border-radius: 50px;
        padding: 10px;
    }

        .login-btn:hover {
            opacity: 0.9;
        }
</style>

@section scripts {
    @Html.Raw(@"
<script src='https://code.jquery.com/jquery-3.6.0.min.js'></script>
<script>
$(document).ready(function () {
    // Toggle password visibility
    $('#togglePassword').on('click', function () {
        let passwordField = $('#password');
        let type = passwordField.attr('type') === 'password' ? 'text' : 'password';
        passwordField.attr('type', type);
        $(this).find('i').toggleClass('fa-eye fa-eye-slash');
    });

    // --- Removed password strength check logic ---

    // Validation before submit
    $('#loginForm').on('submit', function (e) {
        var username = $('#username').val().trim();
        var password = $('#password').val().trim();
        var errorMsg = $('#errormessage');

        // Clear any previous server-side messages when a new submission is made
        // This is important so that server errors don't persist if client-side errors appear later.
        $('.alert-danger:not(#errormessage)').remove();

        if (username === '' || password === '') {
            e.preventDefault(); // Prevent form submission
            errorMsg.text('⚠ Username and Password cannot be empty.')
                    .removeClass('d-none')
                    .addClass('alert-danger');
        }
        else if (username.indexOf('@') > -1 && !/^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(username)) {
            // This check is for email format, only if '@' is present
            e.preventDefault(); // Prevent form submission
            errorMsg.text('⚠ Please enter a valid email address.')
                    .removeClass('d-none')
                    .addClass('alert-danger');
        }
        else {
            // If client-side validation passes, hide the client-side error message.
            errorMsg.addClass('d-none');
            // The form will now submit to the server.
            // No e.preventDefault() here, so the form will submit.
        }
    });
});
</script>
")
}